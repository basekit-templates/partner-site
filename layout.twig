<head>
    <meta charset="utf-8" />
    <title>{{ page.title }}</title>
    <meta name="keywords" content="{{ page.keywords }}" />
    <meta name="description" content="{{ page.description }}" />

    {% if site.favicon %}
        <link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
        <link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
    {% endif %}
    <meta name="viewport" content="width=device-width,initial-scale=1">

    {% include basekit.headScript %}
    {% include 'includes/icons.twig' %}
</head>
<body class="{{ page.backgroundClass }}">

    {% block content %}
    {% endblock %}

    {% include basekit.bodyScript %}

        <!-- JQUERY & MODERNIZR -->

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>

    <script src="{{ asset('js/jquery.magnific-popup.js')}}"></script>
    <script src="{{ asset('js/jquery.fadethis.js')}}"></script>

    <!-- Mobile Navigation Toggle -->

<script>
    $( ".navigation-toggle" ).click(function() {
            $( ".bk-extendednavigation" ).toggleClass( "open" );
        });

</script>

    <!-- Lightbox toggle -->
<script>
    $('.tour-link').magnificPopup({
      type: 'iframe', // this overrides default type
      src: 'http://vimeo.com/123123'
    });
</script>

    <!-- FadeThis at screensizes larger than 860px wide-->
<script>
    if ( $(window).width() > 860) {
        $(window).fadeThis();
    }
    else {
    }
</script>

</body>
</html>